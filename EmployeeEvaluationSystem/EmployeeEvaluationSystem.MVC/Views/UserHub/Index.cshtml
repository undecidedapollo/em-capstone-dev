@model IEnumerable<EmployeeEvaluationSystem.Entity.SurveysAvailable>

@{
    ViewBag.Title = "Survey Console";
}

<h2>Survey Console</h2>

<table class="table">
    <caption>Pending Surveys</caption>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateOpen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateClosed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDeleted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateDeleted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cohort.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Survey.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SurveyType.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateOpen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateClosed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDeleted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateDeleted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cohort.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Survey.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SurveyType.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
