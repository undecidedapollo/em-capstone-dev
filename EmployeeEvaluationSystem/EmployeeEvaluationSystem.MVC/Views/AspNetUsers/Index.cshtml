@model IEnumerable<EmployeeEvaluationSystem.Entity.SharedObjects.Model.Authentication.PersonalAspNetUserViewModel>
@{
    ViewBag.Title = "Employees";
}

<h2>Employees</h2>

<p>
    @Html.ActionLink("Add Employee", "Register", "Account") | 
    @Html.ActionLink("Upload Employees in CSV", "AddCSV", "AspNetUsers")
</p>
<table class="table">
    <tr>
        <th>
            <strong>Last Name</strong>
        </th>
        <th>
            <strong>First Name</strong>
        </th>
        <th>
            <strong>Company ID</strong>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            <strong>Phone</strong>
        </th>
        <th>
            <strong>Address</strong>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.OrderBy(x=>x.LastName)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MailingAddress)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
            @Html.ActionLink("Details", "Details", new {id = item.Id}) |
            @Html.ActionLink("Delete", "Delete", new {id = item.Id})
        </td>
    </tr>
}

</table>
