@model EmployeeEvaluationSystem.MVC.Models.CreateCohortViewModel
@{
    ViewBag.Title = "Create Cohort";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.HiddenFor(model => model.Cohort.ID, new {@class = "control-label col-md-2"})
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Cohort.Name, new {@class = "col-md-2 control-label"})
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Cohort.Name, new {@class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Cohort.Description, new {@class = "col-md-2 control-label"})
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Cohort.Description, new {@class = "form-control"})
            </div>
        </div>

        <table class="table">
            <caption style="font-size:20px">Select 3 Employees for the Cohort</caption>
            <tr>
                <th>
                    <strong>Select</strong>
                </th>
                <th>
                    <strong>Last Name</strong>
                </th>
                <th>
                    <strong>First Name</strong>
                </th>
                <th>
                    <strong>Company ID</strong>
                </th>
                <th>
                    <strong>Email</strong>
                </th>
                <th>
                    <strong>Phone</strong>
                </th>
                <th>
                    <strong>Address</strong>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Users.OrderBy(x => x.LastName))
            {
                <tr>
                    <td>
                        <input type="checkbox" name="ids" value="@item.Id"/>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MailingAddress)
                    </td>
                </tr>
            }

        </table>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Create"/>
            </div>
        </div>
    </div>
}