@model EmployeeEvaluationSystem.MVC.Models.Survey.SurveysViewModel

@{
    ViewBag.Title = "Delete Survey";
}

<h2>Delete Survey</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <dt>
            Survey Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SurveyName)
        </dd>

        <dt>
            Survey Type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SurveyType)
        </dd>

        <dt>
            <strong>Date Open</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOpened)
        </dd>

        <dt>
            <strong>Date Closed</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateClosed)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default" /> |
        @Html.ActionLink("Back to Cohorts", "Index")
    </div>
    }
</div>
